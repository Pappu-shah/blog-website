<%- include('initials/header.ejs') %>
<% if (locals.show === "new-post") { %>
<div class="d-flex justify-content-center my-5">
  <form class="col-4" action="/add-post" method="post">
    <div class="mb-3">
      <label for="title" class="form-label"
        ><em><strong>Title</strong></em></label
      >
      <input type="text" class="form-control" name="title" required/>
    </div>
    <div class="mb-3">
      <label for="content" class="form-label"
        ><em><strong>Content</strong></em></label
      >
      <textarea
        type="text"
        class="form-control"
        rows="7"
        name="content"
       required></textarea>
    </div>
    <div class="d-flex justify-content-around">
      <button type="submit" class="btn btn-dark px-4">Post</button>
      <a href="/" class="btn btn-dark px-3">Cancel</a>
    </div>
  </form>
</div>
<% } else { %>
  <div class="d-flex justify-content-between align-items-center pt-5">
    <h1>Welcome</h1>
    <a href="/new-post"><strong class="me-2">Write</strong><svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
      <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
      <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
    </svg></a>
  </div>
<% if (locals.titles && locals.contents) { %> 
<% for (let index = 0; index < titles.length; index++) { %>
  <section class="container my-5">
    <div class="blogBody p-4 p-md-5 mb-4 rounded text-body-emphasis">
      <a href="/edit-post" class="Icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
          <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"></path>
        </svg>
      </a>
      <div class="col-lg-12 px-0">
          <h1 class="display-10 fst-italic"><%= titles[index] %></h1>
        <p class="lead my-3"><%= contents[index] %></p>
      </div>
    </div>
  </section>

<% } %> <% } %> <% } %> <%- include('initials/footer.ejs') %>